<Window x:Class="GraphicsProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicsProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="403.216" Width="826.19"
        SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Left" Height="250" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="798" Orientation="Horizontal">
            <Canvas HorizontalAlignment="Left" Height="230" Margin="10,10" VerticalAlignment="Top" Width="500" >
                <Border BorderBrush="Black" BorderThickness="2" Margin="10">
                    <Image x:Name="screen" Height="210" Width="480" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </Border>
            </Canvas>
            <Grid Width="auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60*"/>
                    <RowDefinition Height="40*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="50*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>

                    <Label HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Label Content="Ширина:"/>
                    </Label>
                    <TextBox Name="tb_width" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" TextWrapping="Wrap"  Width="60"/>

                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1">
                        <Label Content="Длина:"/>
                    </Label>
                    <TextBox Name="tb_length" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap"  Width="60"/>

                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2">
                        <Label Content="Высота:"/>
                    </Label>
                    <TextBox Name="tb_height" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Width="60"/>
                </Grid>


                <Button Name="btn_createShape" Content="Создать куб" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="4" Grid.ColumnSpan="2" Width="80" Click="btn_createShape_Click"/>

                <Grid Grid.Column="1" Margin="10, 0, 0, 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="50*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Label Content="X :"/>
                    </Label>
                    <TextBox Name="tb_leftCornerX" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" TextWrapping="Wrap"  Width="60"/>

                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1">
                        <Label Content="Y :"/>
                    </Label>
                    <TextBox Name="tb_leftCornerY" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap"  Width="60"/>

                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2">
                        <Label Content="Z :"/>
                    </Label>
                    <TextBox Name="tb_leftCornerZ" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Width="60"/>
                </Grid>

            </Grid>
        </StackPanel>
        <Grid HorizontalAlignment="Left" Height="Auto" Margin="10,10" VerticalAlignment="Top" Width="500" Grid.Row="2">
            <Button Content="Тест" HorizontalAlignment="Left" Margin="10,10" VerticalAlignment="Top" Width="75" Click="Button_Click" RenderTransformOrigin="-2.219,0.75"/>
            <Button Name="btn_clear" Content="Очистить" HorizontalAlignment="Left" Margin="107,10,0,0" VerticalAlignment="Top" Width="75" Click="btn_clear_Click"/>
            <Button Name="btn_rotateLeft" Content="Повернуть" HorizontalAlignment="Left" Margin="203,10,0,0" VerticalAlignment="Top" Width="75" Click="btn_rotateLeft_Click"/>
        </Grid>
        <DockPanel LastChildFill="True">
            <Menu Height="Auto" DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="New Project" />
                    <MenuItem Header="Open Project" >
                        <MenuItem Header="WinForms"/>
                        <MenuItem Header="WPF" />
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Exit" />
                </MenuItem>
                <MenuItem Header="Edit" />
                <MenuItem Header="View" />
            </Menu>
        </DockPanel>
    </Grid>
</Window>
